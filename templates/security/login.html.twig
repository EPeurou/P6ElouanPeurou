</head>
    <body class="body-login">
        <script>
            $( document ).ready(function() {
                if(window.matchMedia("(max-width: 450px)").matches){
                    $(".masthead").css("margin-top","0em");
                    $(".link-add").html('<i class="fas fa-2x fa-pen-square"></i>')
                    $(".link-logout").html('<i class="fas fa-2x fa-door-open"></i>')
                    $(".link-login").html('<i class="fas fa-2x fa-sign-out-alt"></i>')
                    $(".link-register").html('<i class="fas fa-2x fa-user-check"></i>')
                    $(".link-home").html('<i class="fas fa-2x fa-home"></i>')
                    $(".remove-title-nav" ).addClass( "d-none" );
                    $(".navbar" ).removeClass( "fixed-top" );
                    $(".col-user" ).removeClass( "offset-3" );
                    $(".col-password" ).removeClass( "offset-3" );
                    $(".col-valide" ).removeClass( "offset-3" );
                    $(".navbar" ).addClass( "fixed-bottom" );
                    $(".form-new" ).addClass( "section-new-mobile" );
                } else if(window.matchMedia("(max-width: 800px)").matches){
                    $(".masthead").css("margin-top","0em");
                    $(".div-size" ).addClass( "div-size-tablet" );
                    $(".link-add").html('<i class="fas fa-2x fa-pen-square"></i>')
                    $(".link-logout").html('<i class="fas fa-2x fa-door-open"></i>')
                    $(".link-login").html('<i class="fas fa-2x fa-sign-out-alt"></i>')
                    $(".link-register").html('<i class="fas fa-2x fa-user-check"></i>')
                    $(".link-home").html('<i class="fas fa-2x fa-home"></i>')
                    $(".remove-title-nav" ).addClass( "d-none" );
                    $(".row-nav").css("margin-left","16em");
                    $(".navbar" ).removeClass( "fixed-top" );
                    $(".navbar" ).addClass( "fixed-bottom" );
                    $(".form-new" ).addClass( "section-new-tablet" );
                    $(".footer").css("padding","7rem");
                    $(".footer").css("margin-top","20em");
                }
            });
        </script>
        {% block navbar %}
            {% include "navbar.html.twig" %}
        {% endblock %}
        <!-- Masthead-->
        <!-- About-->
            <section class="text-center form-new">
                <h2 class="mb-4 mt-1" style="font-family:Varela Round;">Connexion</h2>
                {% if error %}
                    <input type="hidden" id="inputHiddenError" value="{{ error.messageKey }}">
                {% endif %}
                <form method="post" class="row g-3">
                    <div class="row">
                        <div class="offset-3 col-sm-12 col-md-6 col-xl-6 col-user">
                            <label for="inputEmail">Nom d'utilisateur</label>
                            <input type="text" name="userName" id="userName" class="form-control" required autofocus>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="offset-3 col-sm-12 col-md-6 col-xl-6 col-password">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                            <a href="{{ path('resetemail') }}" style="color:white;">Mot de passe oublié</a>
                        </div>
                    </div>
                    <div class="row mt-3 mb-3">
                        <div class="offset-3 col-sm-12 col-md-6 col-xl-6 col-valide">
                            <button class="btn btn-lg btn-primary" type="submit">Valider</button>
                        </div>
                    </div>
                </form>
            </section>
        <!-- Footer-->
        <footer class="footer bg-black small text-center text-white-50" style="margin-top:5em;"><div class="container px-4 px-lg-5">Copyright &copy; Your Website 2021</div></footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
