        <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
        <script>
            $( document ).ready(function() {
                valError = $('#inputHiddenError').val();
                console.log(valError);
                if(valError){
                    alert('Identifiant incorrect. Si vos identifiants sont corrects vérifié votre boite mail pour la validation du compte.');
                }
            });
        </script>
    </body>
</html>

